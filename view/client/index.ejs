<!----cta--->
<section class="cta">
  <div class="cta-text">
    <h6>🔥پرفروش ترین🔥</h6>
    <h4>
      20% تخفیف<br />
      13 میوه خوشمزه در یک پک
    </h4>
    <a href="#" class="btn">همین الان بخرید!</a>
  </div>
</section>

<!----new--->
<section class="new" id="new">
  <div class="center-text">
    <h2>محصولات</h2>
  </div>
  <div class="new-content">
    <% for(const product of products){ %>
    <div class="box">
      <img src="<%= product.imageUrl %>" />
      <h5><%= product.name %></h5>
      <h6><%= product.price %> تومان</h6>
      <% if(product.sale){ %>
      <div class="sale">
        <h4><%= product.sale %></h4>
      </div>
      <% } %>
      <a href="/api/product/getProduct/<%= product._id %>">مشاهده محصول</a>
    </div>
    <% } %>
  </div>
  <a href="/api/product/getProducts/all" id="see-more">مشاهده بیشتر...</a>
</section>




