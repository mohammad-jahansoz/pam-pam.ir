<!-- title -->






<div class="small-container text-in-border">
  
    <h2>
      <span>
        محصولات مرتبط
      </span>
    </h2>
  
<!-- products -->
<!-- <div class="small-container"> -->
  <div class="row-sp">
    <% for(const relatedProduct of product.relatedProduct){ %>
    <a href="/api/product/getProduct/<%= relatedProduct._id %>" class="col-4">
      <img src="<%= relatedProduct.imageUrl[0] %>" alt="" />
      <h4><%= relatedProduct.name %></h4>
      <p><%= relatedProduct.price %> تومان</p>
    </a>
    <% } %>
  </div>
</div>
  
<!-- </div> -->
<div class="small-container comment-section-container">

<form class="" action="/api/product/comment/<%= product._id %>" method="POST" >
  
  <div
    class="comment-text-container"
  >
    <label for="comment" >Your comment</label>
    <textarea
    name="comment"
      id="comment"
      rows="6"
      class=" focus:outline-none"
      placeholder="لطفا نظر خود را بنویسید..."
      required
    ></textarea>
  </div>

  <div class="comment-input-container">
    <input
      type="email"
      name="email"
      value=""
      placeholder="ایمیل خود را وارد کنید"
      class=""
    />
    <input
    type="text"
    name="name"
    placeholder="نام خود را وارد کنید"
    class="" />
  </div>
  <button
    type="submit"
    class="btn"
  >
    ارسال کامنت
  </button>
</form>

<% for(const item of product.comments.reverse()){ %>

  <div class="cm">
    <div class="cm-cm">
      <span >
        <p><%= item.comment.name %></p>
        <p><%= item.comment.createdAt.toLocaleString('fa-IR-u-nu-latn').split(',',1) %></p>
      </span>
      <p><%= item.comment.comment %></p>
    </div>
    <% if(item.reply){ %>
    <div class="cm-reply">
      <p>پاسخ ادمین👨🏻‍💻</p>
      <p><%= item.reply %></p>
    </div>
    <% } %>
  </div>
  <%  } %>
</div>
</div>


<script>
  var ProductImg = document.getElementById('ProductImg');
  var SmallImg = document.getElementsByClassName('small-img');
  SmallImg[0].onclick = function() {
    ProductImg.src = SmallImg[0].src;
  };
  SmallImg[1].onclick = function() {
    ProductImg.src = SmallImg[1].src;
  };
  SmallImg[2].onclick = function() {
    ProductImg.src = SmallImg[2].src;
  };
  SmallImg[3].onclick = function() {
    ProductImg.src = SmallImg[3].src;
  };
</script>



