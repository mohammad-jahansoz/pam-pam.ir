<section class="new" id="new">
  <div id="sorting" class="center-text">
    <% if(!search){ %>
        <!--  -->
        <h2><%= (category !== "") ? `تمام محصولات ${category}` : "تمام محصولات" %></h2>
    <div class="sort">
      <a href="?sort=createdAt" class="<%= (sortBy === "createdAt") ? "selected" : "" %>">جدید ترین</a>
      <a href="?sort=price" class="<%= (sortBy === "price") ? "selected" : "" %>">گران ترین</a>
      <a href="?sort=views" class="<%= (sortBy === "views") ? "selected" : "" %>">پربازدید ترین</a>
      <a href="?sort=likes" class="<%= (sortBy === "likes") ? "selected" : "" %>">محبوب ترین</a>
    </div>
<% } else{ %>
    <h2><%= `نتیجه جستجو ${search}` %></h2>
  <% } %>
  </div>
  <hr style="margin-top: 3rem;">
  <div class="new-content">
    <% for(const product of products){ %>
    <div class="box">
      <img src="<%= product.imageUrl %>" />
      <h5><%= product.name %></h5>
      <h6><%= product.price %> تومان</h6>
      <% if(product.sale){ %>
      <div class="sale">
        <h4><%= product.sale %></h4>
      </div>
      <% } %>
      <a href="/api/product/getProduct/<%= product._id %>">مشاهده محصول</a>
    </div>
    <% } %>
  </div>


<a href="?page=1">1</a>
<% if(pagination.hasPrevPage && pagination.page != 1 && pagination.page != 2){ %>
<a href="?page=<%= pagination.prevPage %>"><%= pagination.prevPage %></a>
  <% } %>
  <% if( pagination.page != 1 && pagination.page != pagination.totalPages){ %>
  <a href="?page=<%= pagination.page %>"><%= pagination.page %></a>
  <% } %>
  <% if(pagination.hasNextPage && pagination.nextPage != pagination.totalPages){ %>
    <a href="?page=<%= pagination.nextPage %>"><%= pagination.nextPage %></a>
      <% } %>
      
      <a href="?page=<%= pagination.totalPages  %>"><%= pagination.totalPages  %></a>
      
